<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.chaojishipin.sarrs.widget.TitleActionBar
        android:id="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseactivity_title_height"
        app:leftButtonDrawable="@drawable/selector_ranklistdetail_titlebar"
        app:rightButtonDrawable="@drawable/selector_mainactivity_right" />

    <RelativeLayout
        android:id="@+id/download_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/download_title"></RelativeLayout>

</LinearLayout>