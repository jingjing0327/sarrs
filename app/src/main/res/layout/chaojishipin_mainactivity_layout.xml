<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chaojishipin.sarrs.widget.TitleActionBar
        android:id="@+id/mainactivity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseactivity_title_height"
        app:leftButtonDrawable="@drawable/selector_mainactivity_left"
        app:rightButtonDrawable="@drawable/selector_mainactivity_right"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
</LinearLayout>
