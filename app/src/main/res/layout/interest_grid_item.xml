<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="@dimen/sarrs_dimen_172.5dp"
        android:layout_height="@dimen/sarrs_dimen_97dp">

        <ImageView
            android:id="@+id/interest_item_poster"
            android:layout_width="@dimen/sarrs_dimen_172.5dp"
            android:layout_height="@dimen/sarrs_dimen_97dp" />

        <ImageView
            android:id="@+id/select_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/interest_check"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sarrs_dimen_30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_66000000">

            <TextView
                android:id="@+id/interest_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/sarrs_dimen_15dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>