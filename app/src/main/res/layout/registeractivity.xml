<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_ffffff"
     >
    <include
        android:id="@+id/register_activity_notify_titlebar"
        layout="@layout/registeractivity_titlebar">
    </include>
    <View
        android:id="@+id/black_line"
        android:layout_below="@+id/register_activity_notify_titlebar"
        android:layout_width="fill_parent"
        android:background="@color/color_999999"
        android:layout_height="@dimen/sarrs_dimen_0.5dp"
        >
    </View>

    <RelativeLayout
        android:id="@+id/register_activity_input"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/black_line"
        >
        <ImageView
            android:id="@+id/register_activity_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_activity_eidt"
            android:layout_centerVertical="true"
            android:src="@drawable/sarrs_pic_resigter_eidt_img"
            android:layout_marginLeft="6dp"
            />
        <EditText
            android:id="@+id/register_activity_eidt"
            android:layout_width="265dp"
            android:layout_alignTop="@+id/register_activity_icon"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textCursorDrawable="@drawable/selector_login_edit_cursor"
            android:phoneNumber="true"
            android:numeric="integer"
            android:singleLine="true"
            android:maxLength="13"
            android:ellipsize="end"
            android:paddingLeft="25dp"
            android:paddingRight="40dp"
            android:hint="@string/edit_hint"
            android:background="@null"
            android:textColorHint="@color/color_999999"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/register_activity_clear_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_alignRight="@+id/register_activity_eidt"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_register_clear"
            />

        <Button
            android:id="@+id/register_activity_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:text="50"
            />
    </RelativeLayout>
     <View
         android:layout_width="wrap_content"
         android:layout_height="1dp"
         android:layout_alignLeft="@+id/register_activity_next"
         android:layout_alignRight="@+id/register_activity_next"
         android:layout_below="@+id/register_activity_input"
         android:background="@color/color_999999">
     </View>

     <Button
         android:id="@+id/register_activity_next"
         android:layout_width="260dp"
         android:layout_height="wrap_content"
         android:text="@string/login_next"
         android:gravity="center"
         android:textSize="18sp"
         android:textColor="@color/color_ffffff"
         android:background="@color/color_D5D5D5"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="23dp"
         android:layout_below="@+id/register_activity_input"
         />
    <TextView
        android:id="@+id/register_activity_notice"
        android:layout_below="@+id/register_activity_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_444444"
        android:textSize="11sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/html_tilte"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@color/color_ffffff"
        android:id="@+id/register_activity_third_title"
        android:layout_below="@+id/register_activity_notice"
        >
        <TextView
            android:layout_width="125dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
           android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/color_D5D5D5"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="第三方登录"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_444444"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="125dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@color/color_D5D5D5"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="19dp"
        android:layout_below="@+id/register_activity_third_title"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            >
            <Button
                android:id="@+id/register_activity_wx"
                android:layout_width="48dp"
                android:background="@drawable/sarrs_pic_register_activity_wx"
                android:layout_height="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="微信"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/color_444444"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >
        <Button
            android:id="@+id/register_activity_wb"
            android:layout_width="48dp"
            android:background="@drawable/sarrs_pic_resgister_activity_wb"
            android:layout_height="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="微博"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_444444"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
        <Button
            android:id="@+id/register_activity_qq"
            android:layout_width="48dp"
            android:background="@drawable/sarrs_pic_register_activity_qq"
            android:layout_height="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="QQ"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_444444"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>





</RelativeLayout>