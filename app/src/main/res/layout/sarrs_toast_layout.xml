<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sarrs_top_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sarrs_top_toast_bg">
    <!--android:layout_marginBottom="4dp"-->
    <!--android:layout_marginEnd="4dp"-->
    <!--android:layout_marginStart="4dp"-->
    <TextView
        android:id="@+id/sarrs_top_toast_text"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sarrs_top_toast_revert"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/sarrs_tost_close"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <View
        android:id="@+id/sarrs_top_toast_divider"
        android:layout_width="0.5dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/sarrs_top_toast_revert"
        android:layout_centerVertical="true"
        android:background="#8fff" />

</RelativeLayout>
