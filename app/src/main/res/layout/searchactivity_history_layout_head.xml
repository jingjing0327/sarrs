<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchactivity_history_layout_head"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/section_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/searchlayout_height"
        android:layout_marginLeft="@dimen/searchlayout_left"
        android:textColor="@color/color_b2ffffff"
        android:textSize="@dimen/sarrs_text_12sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text="@string/search_history"
        />

    <TextView
        android:id="@+id/searchactivity_history_layout_head_clear"
        android:layout_width="@dimen/searchlayout_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/searchlayout_left"
        android:textColor="@color/color_b2ffffff"
        android:textSize="@dimen/sarrs_text_12sp"
        android:gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:text="@string/search_history_clear"/>

</RelativeLayout>