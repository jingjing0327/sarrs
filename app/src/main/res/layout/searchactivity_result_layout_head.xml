<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchactivity_result_layout_head"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/searchactivity_noresult_head_topmargin"
    >
    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/searchlayout_left"
        android:textColor="@color/color_b2ffffff"
        android:textSize="@dimen/sarrs_text_12sp"
        android:gravity="center_vertical"
        android:text="@string/search_result_foryou"/>
    <View
        android:layout_below="@+id/textContent"
        android:layout_marginTop="-0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/color_19ffffff"
        android:layout_height="@dimen/sarrs_dimen_0.5dp">
    </View>
</RelativeLayout>