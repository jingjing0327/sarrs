<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slidingmenu_left_view_height"
    android:background="@drawable/selector_slidingmenu_left_view_bg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/slidingmenu_left_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/slidingmenu_left_view_icon_marginlfet"
        android:duplicateParentState="true" />

    <TextView
        android:id="@+id/slidingmenu_lefe_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:layout_marginLeft="@dimen/sarrs_dimen_80dp"
        android:gravity="center_vertical"
        android:text="@string/logo"
        android:textColor="@drawable/selector_slidingmenu_left_view_title"
        android:textSize="@dimen/slidingmenu_left_view_title_size" />

    <ImageView
        android:id="@+id/live_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slidingmenu_lefe_view_title"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@+id/slidingmenu_lefe_view_title"
        android:background="@drawable/live_push" />
</RelativeLayout>
