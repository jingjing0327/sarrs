<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false"
    android:background="@color/color_ffffff"
    >
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/video_detail_anim_bottom_showlist_item_ln"
        >
    <ImageView
        android:id="@+id/video_detail_anim_bottom_showlist_item_logo"
        android:layout_width="112dp"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:focusable="false"
        android:textColor="@color/color_666666" />

<RelativeLayout
    android:layout_marginLeft="@dimen/sarrs_dimen_5dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView
        android:id="@+id/video_detail_anim_bottom_showlist_item_playimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sarrs_pic_videodetail_play"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_marginTop="25dp"
        android:focusable="false"
        />
    <TextView
        android:layout_toRightOf="@+id/video_detail_anim_bottom_showlist_item_playimg"
        android:id="@+id/video_detail_anim_bottom_showlist_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="21dp"
        android:gravity="left|center_vertical"
        android:focusable="false"
        android:paddingRight="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:paddingBottom="3dp"
        android:background="@color/color_ffffff"
        android:text="2015-02-03期 国民女神们终嫁人"
        android:textColor="@color/color_666666" />
        <ImageView
            android:id="@+id/download_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/downloadlistactivity_download_icon"
            android:gravity="center"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginTop="25dp"
            android:focusable="false"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/sarrs_dimen_5dp"
            android:layout_alignParentRight="true"

            />
        </RelativeLayout>
   </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_gv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_detail_anim_up_showgrid_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/sarrs_pic_videodetail_play"
            />
        <TextView
            android:id="@+id/video_detail_anim_bottom_showgrid_item_title"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="6"
            android:focusable="false"
            android:textColor="@color/color_666666" />
        <ImageView
            android:id="@+id/video_detail_anim_bottom_showgrid_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:src="@drawable/downloadlistactivity_download_icon"
            />
    </RelativeLayout>

</LinearLayout>



