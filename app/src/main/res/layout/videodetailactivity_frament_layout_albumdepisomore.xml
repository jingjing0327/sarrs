<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:clickable="true"
    android:background="@color/color_ffffff"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
        <TextView
            android:layout_gravity="left"
            android:id="@+id/video_detail_episo_title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/videodetail_episode"
            android:gravity="center_vertical|left"
            android:textColor="@color/color_666666"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ffffff"
            />
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/video_detail_trigger_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_videodetail_menu_close"
            />
        </RelativeLayout>
        <com.chaojishipin.sarrs.widget.MyListView
            android:id="@+id/video_detail_anim_bottom_showlist"
            android:layout_width="fill_parent"
            android:dividerHeight="1dp"
            android:divider="@color/color_ffffff"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:background="@color/color_ffffff"
            android:visibility="visible"/>

    </LinearLayout>
</FrameLayout>